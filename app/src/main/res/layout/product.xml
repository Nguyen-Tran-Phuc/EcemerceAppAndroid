<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#787878"
    android:layout_marginHorizontal="10dp"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="129dp"
        android:layout_height="99dp"
        android:background="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"/>

    <TextView
        android:id="@+id/itemproduct_name"
        android:layout_width="77dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:text="Nước Ngọt"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/itemproduct_price"
        android:layout_width="77dp"
        android:layout_height="16dp"
        android:text="10.000 VNĐ"
        app:layout_constraintStart_toStartOf="@+id/itemproduct_name"
        app:layout_constraintTop_toBottomOf="@+id/itemproduct_name" />

    <ImageButton
        android:id="@+id/itemproduct_btnAdd"
        android:layout_width="33dp"
        android:layout_height="31dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/ic_baseline_add_circle_outline_24" />
</androidx.constraintlayout.widget.ConstraintLayout>