<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frhome"
    tools:context=".FragmentApp.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_backgroudall"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/frhome_btnCake"
            android:layout_width="54dp"
            android:layout_height="53dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="548dp"
            android:background="@drawable/edit_button_cycle"
            android:src="@drawable/ic_cake_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/frhome_btnIcecream"
            app:layout_constraintTop_toBottomOf="@+id/frhome_categoryTitle" />

        <SearchView
            android:id="@+id/frhome_searchBar"
            android:layout_width="302dp"
            android:layout_height="29dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/frhome_categoryTitle"
            android:layout_width="138dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quicksand"
            android:text="Categories"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frhome_searchBar" />

        <ImageButton
            android:id="@+id/frhome_btnFruit"
            android:layout_width="54dp"
            android:layout_height="53dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="548dp"
            android:background="@drawable/edit_button_cycle"
            android:src="@drawable/ic_grass_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.114"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frhome_categoryTitle" />

        <ImageButton
            android:id="@+id/frhome_btnDrink"
            android:layout_width="54dp"
            android:layout_height="53dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="548dp"
            android:background="@drawable/edit_button_cycle"
            android:src="@drawable/ic_liquor_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.152"
            app:layout_constraintStart_toEndOf="@+id/frhome_btnFruit"
            app:layout_constraintTop_toBottomOf="@+id/frhome_categoryTitle" />

        <ImageButton
            android:id="@+id/frhome_btnIcecream"
            android:layout_width="54dp"
            android:layout_height="53dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="548dp"
            android:background="@drawable/edit_button_cycle"
            android:src="@drawable/ic_icecream_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.235"
            app:layout_constraintStart_toEndOf="@+id/frhome_btnDrink"
            app:layout_constraintTop_toBottomOf="@+id/frhome_categoryTitle" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Fruit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frhome_btnFruit" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Drink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.387"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frhome_btnDrink" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="IceCream"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.656"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frhome_btnIcecream" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:text="Cake"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.873"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frhome_btnCake" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_product"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="236dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frhome_searchBar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/frhome_recyclerView2"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="72dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rcv_product" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>